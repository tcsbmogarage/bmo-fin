- var frMsg = "rien d'autre?"
- var enMsg = "I could not figure-out this time, try again in other words."

if Locale == "fr-ca"
    s
        case Emotion.toLowerCase()
            when 'sad'
                emphasis(level="moderate") 
                    prosody(volume="soft") C'est bon, 
                break(time="10ms")
                | #{frMsg}
            when 'joy'
                emphasis(level="moderate") 
                    prosody(volume="x-loud") Je suis heureux d'entendre cela, 
                break(time="10ms")
                | #{frMsg}
            default
                break(time="10ms")
                | #{frMsg}
else 
    s
        case Emotion.toLowerCase()
            when 'sad'
                emphasis(level="moderate") 
                    prosody(volume="soft") That's Okay, 
                break(time="10ms")
                | #{enMsg}
            when 'joy'
                emphasis(level="moderate") 
                    prosody(volume="x-loud") I am glad to hear that, 
                break(time="10ms")
                | #{enMsg}
            default
                break(time="10ms")
                | #{enMsg}
